services:
  matter-server:
    container_name: matter-server
    image: ghcr.io/home-assistant-libs/python-matter-server:stable
    restart: unless-stopped
    security_opt:
      - apparmor=unconfined
    volumes:
      - {{ matter_config_path }}:/data
      - /run/dbus:/run/dbus:ro
    network_mode: host